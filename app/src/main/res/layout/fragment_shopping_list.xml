<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="980dp"
    android:layout_height="match_parent"
    tools:context=".ShoppingListFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baseConstraintForShoppingListFragmentFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">

        <ScrollView
            android:id="@+id/scrollingViewForShoppingListFragmentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/very_light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollIViewForShoppingListFragmentFragmentConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ShoppingListFragmentItemCard0"
                    android:layout_width="939dp"
                    android:layout_height="1000dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/thisoneJames"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></LinearLayout>

                        <TextView
                            android:id="@+id/dateForShoppingList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="January 17th, 2021"
                            android:textSize="28sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/pantryItem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="350dp"
                            android:layout_marginTop="48dp"
                            android:layout_marginEnd="350dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="1) 5 Cookies - 5 kg per Cookie"
                            android:textSize="28sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/shoppingListTitle" />

                        <TextView
                            android:id="@+id/pantryItem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="350dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="350dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="2) 14 Cakes - 17 kg per Cake"
                            android:textSize="28sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pantryItem1" />

                        <TextView
                            android:id="@+id/pantryItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="350dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="350dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="3) 23 Slices of Pizza - 2 kg per Pizza"
                            android:textSize="28sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.454"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pantryItem2" />

                        <TextView
                            android:id="@+id/shoppingListTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="32dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Shopping List"
                            android:textSize="48sp"
                            app:layout_constraintEnd_toStartOf="@+id/printButton"
                            app:layout_constraintHorizontal_bias="0.305"
                            app:layout_constraintStart_toEndOf="@+id/dateForShoppingList"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/printButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:alpha=".7"
                            android:background="@drawable/ic_baseline_print_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:id="@+id/harrysdick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.144"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.284" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
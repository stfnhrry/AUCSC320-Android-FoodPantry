<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="980dp"
    android:layout_height="match_parent"
    tools:context=".ShoppingListFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baseConstraintForShoppingListFragmentFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">

        <ScrollView
            android:id="@+id/scrollingViewForShoppingListFragmentFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchBarForShoppingList"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:layout_marginBottom="16dp"
            android:background="@color/very_light_grey">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollIViewForShoppingListFragmentFragmentConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ShoppingListFragmentItemCard0"
                    android:layout_width="939dp"
                    android:layout_height="1000dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/dateForShoppingList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="January 14th, 2021"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/pantryItem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="350dp"
                            android:layout_marginTop="48dp"
                            android:layout_marginEnd="350dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="1) 5 Cookies - 5 kg per Cookie"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/shoppingListTitle" />

                        <TextView
                            android:id="@+id/pantryItem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="350dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="350dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="2) 14 Cakes - 17 kg per Cake"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pantryItem1" />

                        <TextView
                            android:id="@+id/pantryItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="350dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="350dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="3) 23 Slices of Pizza - 2 kg per Pizza"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.454"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pantryItem2" />

                        <TextView
                            android:id="@+id/shoppingListTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="32dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Shopping List"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toStartOf="@+id/printButton"
                            app:layout_constraintHorizontal_bias="0.431"
                            app:layout_constraintStart_toEndOf="@+id/dateForShoppingList"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/printButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:alpha=".7"
                            android:background="@drawable/ic_baseline_print_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchBarForShoppingList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/light_grey">

            <ImageView
                android:id="@+id/searchMagIconForShoppingList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_search_24" />

            <EditText
                android:id="@+id/searchEditTextForShoppingListFragment"
                app:layout_constraintStart_toEndOf="@+id/searchMagIconForShoppingList"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:ems="12"
                android:hint="Use the search bar to find a specific pantry item"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/addCardButtonForShoppingListFragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:alpha=".7"
                android:background="@drawable/ic_baseline_add_circle_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/removeCardButtonForShoppingListFragment"
                app:layout_constraintEnd_toStartOf="@+id/addCardButtonForShoppingListFragment"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:alpha=".7"
                android:background="@drawable/ic_baseline_remove_circle_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/currentDateShoppingListFragmentText"
                app:layout_constraintEnd_toStartOf="@+id/removeCardButtonForShoppingListFragment"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="January 14th, 2021"
                android:textSize="28sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>